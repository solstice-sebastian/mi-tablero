<div class="active-assets">
  {{#each model as |activeAsset|}}
    {{#paper-card class="md-card"}}
      {{#paper-card-content}}
        <h2>{{activeAsset.id}} -
          <span class="asset-stat__value {{if activeAsset.isPositive "positive" "negative"}}">
            {{pretty-percent activeAsset.currentProfitLoss}}
          </span>
        </h2>

        <div class="active-asset" layout="row" layout-align="start center" data-id="last-buy-in">
          <label class="asset-stat__label">
            Last buy in:
          </label>
          <span class="asset-stat__value">
            {{activeAsset.lastBuyIn.price}}
          </span>
        </div>

        <div class="active-asset" layout="row" layout-align="start center" data-id="current-price">
          <label class="asset-stat__label">
            Current price:
          </label>
          <span class="asset-stat__value">
            {{activeAsset.currentPrice}}
          </span>
        </div>
      {{/paper-card-content}}

      {{#paper-card-content}}
        {{paper-divider}}
      {{/paper-card-content}}

      {{#paper-card-content}}
        {{!-- open orders --}}
        {{#each activeAsset.openOrders as |order|}}
          {{#order-widget
            order = order
          }}{{/order-widget}}
        {{/each}}

        {{#paper-card-content}}
          {{paper-divider}}
        {{/paper-card-content}}

        {{#order-widget
          order = activeAsset.newOrder
        }}{{/order-widget}}
      {{/paper-card-content}}

    {{/paper-card}}
  {{/each}}
</div>